{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/" },
    { "src": "/public/(.*)", "dest": "/public/" },
    { "src": "/favicon.ico", "dest": "/public/favicon.png" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
